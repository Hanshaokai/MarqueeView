<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lxj.marqueeviewdemo.MainActivity">


    <com.lxj.marqueeview.MarqueeView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingLeft="15dp"
        app:marqueeTextSize="16sp"
        app:marqueeTextColor="@color/colorPrimary"
        app:marqueeTextGravity="center"
        android:id="@+id/marqueeView1"
        android:background="@drawable/bg"
        android:layout_width="160dp"
        android:layout_height="40dp"/>

    <com.lxj.marqueeview.MarqueeView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        app:marqueeTextSize="18sp"
        app:marqueeInterval="3000"
        app:marqueeTextColor="#aaff0000"
        app:marqueeTextGravity="center"
        android:id="@+id/marqueeView2"
        android:background="@drawable/bg"
        android:layout_width="200dp"
        android:layout_height="50dp"/>

    <Button
        android:layout_width="match_parent"
        android:text="@string/marquee_str"
        android:layout_marginTop="20dp"
        android:id="@+id/btn"
        android:layout_height="wrap_content" />

</LinearLayout>
